@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<the-store></the-store>

<h1 class="text-center" style="margin-top: 20px">@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form class="form-horizontal" role="form" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-sm-3 control-label">First Name</label>
                <div class="col-sm-9">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-sm-3 control-label">Last Name</label>
                <div class="col-sm-9">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="col-sm-3 control-label">User Name</label>
                <div class="col-sm-9">
                    <input asp-for="UserName" class="form-control" />
                </div>
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="col-sm-3 control-label">Confirm Password</label>
                <div class="col-sm-9">
                    <input asp-for="PasswordConfirm" type="password" class="form-control" />
                </div>
                <span asp-validation-for="PasswordConfirm" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-sm-3 control-label">Phone</label>
                <div class="col-sm-9">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="col-sm-3 control-label">City</label>
                <div class="col-sm-9">
                    <input asp-for="City" class="form-control" />
                </div>
                <span asp-validation-for="City" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="col-sm-3 control-label">Country</label>
                <div class="col-sm-9">
                    <input asp-for="Country" class="form-control" />
                </div>
                <span asp-validation-for="Country" class="text-warning"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form> <!-- /form -->
    </div>
</div>
