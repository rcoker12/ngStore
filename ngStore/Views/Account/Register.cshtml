@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<the-store></the-store>

<h1 style="margin-top: 20px">@ViewBag.Title</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <div class="col-md-4 mb-2">
            <label asp-for="UserName" class="control-label">User Name</label>
            <div>
                <input asp-for="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <div>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <div>
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="Password" class="control-label">Password</label>
            <div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="PasswordConfirm" class="control-label">Confirm Password</label>
            <div>
                <input asp-for="PasswordConfirm" type="password" class="form-control" />
            </div>
            <span asp-validation-for="PasswordConfirm" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="Email" class="control-label">Email</label>
            <div>
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="Phone" class="control-label">Phone</label>
            <div>
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="City" class="control-label">City</label>
            <div>
                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-warning"></span>
        </div>
        <div class="col-md-4 mb-2">
            <label asp-for="Country" class="control-label">Country</label>
            <div>
                <input asp-for="Country" class="form-control" />
            </div>
            <span asp-validation-for="Country" class="text-warning"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 20px">Register</button>
</form>
